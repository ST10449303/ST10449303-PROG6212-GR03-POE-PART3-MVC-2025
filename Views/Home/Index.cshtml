@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex flex-column justify-content-center align-items-center min-vh-100" style="background-color: #f0f0f0;">
    <div class="text-center p-5 rounded shadow" style="background-color: #ffffff; border-left: 5px solid #0d6efd;">
        <i class="fas fa-file-invoice-dollar fa-3x text-primary mb-3"></i>
        <h1 class="display-4 mb-3">Welcome to Contract Monthly Claim System</h1>
        <p class="text-secondary mb-4">
            Easily submit, track, and manage your monthly claims.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
                <i class="fas fa-sign-in-alt me-2"></i> Login
            </a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-user-plus me-2"></i> Register
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #e9ecef; /* light grey background */
    }

    h1.display-4 {
        color: #0d6efd; /* Bootstrap primary blue */
    }

    p.text-secondary {
        color: #6c757d; /* grey text */
    }

    .btn-primary, .btn-outline-primary {
        min-width: 140px;
    }
</style>

