@model ContractMonthlyClaimSystem.Models.LecturerProfile

@{
    ViewData["Title"] = "Edit Lecturer";
    Layout = "~/Views/Shared/HRLayout.cshtml";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
    <form asp-action="EditLecturer" method="post" novalidate>
        <div class="mb-3">
            <label asp-for="FullName" class="form-label">Full Name</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EmployeeID" class="form-label">Employee ID</label>
            <input asp-for="EmployeeID" class="form-control" />
            <span asp-validation-for="EmployeeID" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="YearLevel" class="form-label">Year Level</label>
            <input asp-for="YearLevel" class="form-control" />
            <span asp-validation-for="YearLevel" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="QualificationName" class="form-label">Qualification Name</label>
            <input asp-for="QualificationName" class="form-control" />
            <span asp-validation-for="QualificationName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="QualificationCode" class="form-label">Qualification Code</label>
            <input asp-for="QualificationCode" class="form-control" />
            <span asp-validation-for="QualificationCode" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Faculty" class="form-label">Faculty</label>
            <input asp-for="Faculty" class="form-control" />
            <span asp-validation-for="Faculty" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-start mt-4">
            <button type="submit" class="btn btn-success me-2">Save Changes</button>
            <a class="btn btn-secondary" href="@Url.Action("Lecturers", "HR")">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
