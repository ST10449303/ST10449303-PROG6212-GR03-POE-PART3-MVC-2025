@using Microsoft.AspNetCore.Identity
@inject SignInManager<ContractMonthlyClaimSystem.Models.ApplicationUser> SignInManager
@inject UserManager<ContractMonthlyClaimSystem.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Manager</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- TOP NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Dashboard", "Manager")">Contract Monthly Claim System</a>

           

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Right-aligned menu -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")"
                           href="@Url.Action("Dashboard", "Manager")">Dashboard</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "AllClaims" ? "active" : "")"
                           href="@Url.Action("AllClaims", "Manager")">All Submitted Claims</a>
                    </li>

                    <li class="nav-item">
                        <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN PAGE CONTENT -->
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        @RenderBody()
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">&copy; @DateTime.Now.Year Contract Monthly Claim System</span>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
