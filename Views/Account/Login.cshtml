@model ContractMonthlyClaimSystem.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center min-vh-100" style="background-color: #e9ecef;">
    <div class="card shadow p-4" style="width: 400px; border-top: 5px solid #0d6efd;">
        <div class="text-center mb-4">
            <i class="fas fa-sign-in-alt fa-3x text-primary mb-2"></i>
            <h2 class="text-primary">The Contract Monthly Claim System</h2>
            <p class="text-secondary">Sign in to your account</p>
        </div>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3 input-group">
                <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                <input asp-for="Email" class="form-control" placeholder="Work Email" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>

            <div class="mb-3 input-group">
                <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>

            <!--  ROLE DROPDOWN ADDED HERE -->
            <div class="mb-3 input-group">
                <span class="input-group-text bg-light"><i class="fas fa-user-tag"></i></span>
                <select asp-for="Role" class="form-control">
                    <option value="">Select Role</option>
                    <option value="Lecturer">Lecturer</option>
                    <option value="Coordinator">Coordinator</option>
                    <option value="Manager">Manager</option>
                    <option value="HR">HR</option>
                </select>
            </div>
            <span asp-validation-for="Role" class="text-danger"></span>
            <!-- END ROLE DROPDOWN -->

            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-2">
                <i class="fas fa-sign-in-alt"></i> Login
            </button>

            <div class="d-flex justify-content-between">
                <a asp-action="Register" class="btn btn-outline-secondary"><i class="fas fa-user-plus"></i> Create Account</a>
                <a asp-action="ForgotPassword" class="btn btn-outline-danger"><i class="fas fa-key"></i> Forgot Password?</a>
            </div>

            <p class="mt-3 text-center text-secondary">
                Don't have an account? <a asp-action="Register" class="text-primary">Sign up here</a>
            </p>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
