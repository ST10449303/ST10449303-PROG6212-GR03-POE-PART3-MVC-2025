@{
    ViewData["Title"] = "Logout";
}

<div class="d-flex justify-content-center align-items-center min-vh-100" style="background-color: #e9ecef;">
    <div class="card shadow p-4 text-center" style="width: 400px; border-top: 5px solid #dc3545;">
        <div class="mb-4">
            <i class="fas fa-sign-out-alt fa-3x text-danger"></i>
            <h2 class="text-danger mt-2">Logout</h2>
            <p class="text-secondary">Are you sure you want to log out?</p>
        </div>
        <form asp-action="Logout" method="post">
            <button type="submit" class="btn btn-danger w-100 mb-2">
                <i class="fas fa-door-open"></i> Log Out
            </button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>

